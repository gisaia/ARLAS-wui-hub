{
  "name": "arlas-hub",
  "version": "27.2.0-dev",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:iam": "ng serve --ssl --ssl-cert=$EXPLO_SSL_CERT --ssl-key=$EXPLO_SSL_KEY",
    "build": "ng build --configuration production --aot --base-href='$ARLAS_HUB_BASE_HREF/'",
    "test": "ng test",
    "lint": "ng lint",
    "postinstall": "patch-package --patch-dir ./node_modules/arlas-web-core/patches && patch-package --patch-dir ./node_modules/arlas-d3/patches",
    "e2e": "ng e2e",
    "license-check": "license-check-and-add check -f license-check-and-add.json",
    "license-add": "license-check-and-add add -f license-check-and-add.json",
    "i18n:init": "ngx-translate-extract --input ./src --output ./src/assets/i18n/template.json --key-as-default-value --replace --format json",
    "i18n:extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/{en,fr}.json --format json"
  },
  "private": true,
  "peerDependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "rxjs": "^7.4.0",
    "zone.js": "^0.15.0"
  },
  "dependencies": {
    "arlas-wui-toolkit": "28.0.0-beta.2",
    "jwt-decode": "^3.1.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.13",
    "@angular-eslint/builder": "~20.7.0",
    "@angular-eslint/eslint-plugin": "~20.7.0",
    "@angular-eslint/eslint-plugin-template": "~20.7.0",
    "@angular-eslint/schematics": "~20.7.0",
    "@angular-eslint/template-parser": "~20.7.0",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@angular/language-service": "^20.3.15",
    "@colsen1991/ngx-translate-extract-marker": "^3.0.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/jasmine": "~3.10.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "jasmine-core": "~3.10.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "license-check-and-add": "^4.0.5",
    "node": "^24.10.1",
    "patch-package": "^8.0.1",
    "ts-node": "~10.4.0",
    "typescript": "~5.8.0"
  },
  "overrides": {
    "license-check-and-add": {
      "globby": "^11.0.0"
    }
  }
}
